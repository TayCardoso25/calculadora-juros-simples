<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="338dp"
            android:layout_height="201dp"
            app:srcCompat="@drawable/_9e05693a0f58f836d8adbe1e53089db" />

        <EditText
            android:id="@+id/editCapital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Capital (R$)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editJuros"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Juros (R$)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editTaxa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Taxa de Juros (%)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editPrazo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Prazo (meses)"
            android:inputType="number" />

        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Calcular" />

        <TextView
            android:id="@+id/textEscolha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Escolha o que calcular:"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>

</RelativeLayout>



